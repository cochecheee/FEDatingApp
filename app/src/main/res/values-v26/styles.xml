<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SettingsItemContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">56dp</item> <!-- Chiều cao tối thiểu -->
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground
        </item> <!-- Hiệu ứng chạm -->
        <item name="android:clickable">false
        </item> <!-- Mặc định không click được, trừ khi override -->
        <item name="android:focusable">false</item>
    </style>
</resources>