<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background_main</item>
    </style>

    <!-- Card Style -->
    <style name="AppTheme.Card">
        <item name="android:background">@drawable/card_background</item>
        <item name="android:padding">16dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
    </style>

    <!-- Header Text Style -->
    <style name="AppTheme.HeaderText">
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Subheader Text Style -->
    <style name="AppTheme.SubheaderText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:alpha">0.9</item>
    </style>

    <!-- Section Title Style -->
    <style name="AppTheme.SectionTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Input Field Style -->
    <style name="AppTheme.InputField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="hintTextColor">@color/colorAccent</item>
        <item name="android:textColorHint">@color/text_hint</item>
    </style>

    <!-- Dropdown Style -->
    <style name="AppTheme.Dropdown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="hintTextColor">@color/colorAccent</item>
        <item name="android:textColorHint">@color/text_hint</item>
    </style>

    <!-- Button Style: Primary -->
    <style name="AppTheme.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="backgroundTint">@color/button_background</item>
    </style>

    <!-- Button Style: Secondary -->
    <style name="AppTheme.Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="strokeColor">@color/colorAccent</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <!-- Icon Style -->
    <style name="AppTheme.Icon">
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="tint">@color/colorAccent</item>
    </style>

    <!-- Slider Style -->
    <style name="AppTheme.Slider" parent="Widget.MaterialComponents.Slider">
        <item name="thumbColor">@color/slider_track_active</item>
        <item name="trackColorActive">@color/slider_track_active</item>
        <item name="trackColorInactive">@color/slider_track_inactive</item>
        <item name="labelBehavior">withinBounds</item>
    </style>

    <!-- Chip Style -->
    <style name="AppTheme.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@drawable/chip_background_color</item>
        <item name="android:textColor">@color/chip_text</item>
    </style>

    <!-- Chip Style: Add More -->
    <style name="AppTheme.Chip.AddMore" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@android:color/transparent</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/colorAccent</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>
