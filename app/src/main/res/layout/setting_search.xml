<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:paddingBottom="16dp"
        android:text="Enter Your Preferences"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/et_dating_purpose"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Mục đích hẹn hò -->
    <EditText
        android:id="@+id/et_dating_purpose"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Dating Purpose"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <!-- Thanh kéo chọn độ tuổi -->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:text="Age Range"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/range_slider_age"
        app:layout_constraintTop_toBottomOf="@+id/et_dating_purpose" />

    <com.google.android.material.slider.RangeSlider
        android:id="@+id/range_slider_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:stepSize="1"
        android:valueFrom="18"
        android:valueTo="100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/tv_age_range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Min: 18, Max: 100"
        app:layout_constraintStart_toStartOf="@+id/range_slider_age"
        app:layout_constraintTop_toBottomOf="@+id/range_slider_age" />

    <!-- Khoảng cách -->
    <EditText
        android:id="@+id/et_distance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Distance (km)"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_age_range"
        app:layout_constraintTop_toBottomOf="@+id/tv_age_range" />

    <!-- Sở thích -->
    <EditText
        android:id="@+id/et_interests"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Interests"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/et_distance"
        app:layout_constraintTop_toBottomOf="@+id/et_distance" />

    <!-- Cung hoàng đạo -->
    <Spinner
        android:id="@+id/spinner_zodiac"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit_text_background"
        android:entries="@array/zodiac_sign_list"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/et_interests"
        app:layout_constraintTop_toBottomOf="@+id/et_interests" />

    <!-- Tính cách -->
    <EditText
        android:id="@+id/et_personality_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Personality Type"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/spinner_zodiac"
        app:layout_constraintTop_toBottomOf="@+id/spinner_zodiac" />

    <!-- Nút hành động -->


    <!-- Nút hành động -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/et_personality_type">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>